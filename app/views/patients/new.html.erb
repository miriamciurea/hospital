<%= form_with model: @patient do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :telephone %>
  <%= f.text_field :telephone %>

  <%= f.label :problem %>
  <%= f.text_area :problem, placeholder: "Describe the problems..." %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.submit %>
<% end %>
