
<h1>Edit Patient</h1>

<%= form_with model: @patient, url: patient_path(@patient), method: :patch do |f| %>
  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div>
    <%= f.label :telephone %>
    <%= f.text_field :telephone %>
  </div>
  <div>
    <%= f.label :problem %>
    <%= f.text_area :problem, rows: 4, cols: 50 %>
  </div>
  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <%= f.submit "Update Patient" %>
  <%= link_to 'Back', patients_path %>
<% end %>
